    <!-- 公共 -->
    <package name="wow" extends="struts-default">
        <global-results>
            <result name="sql">/error.jsp</result>
            <result name="invalidInput">/error.jsp</result>
            <result name="naming">/error.jsp</result>
        </global-results>
        <global-exception-mappings>
            <exception-mapping exception="java.sql.SQLException" result="sql"/>
            <exception-mapping exception="cn.codeplus.exception.InvalidInputException" result="invalidInput"/>
            <exception-mapping exception="javax.naming.NamingException" result="naming"/>
        </global-exception-mappings>
    </package>

